# Agno RAG Configuration
# Copy this file to .env and fill in your actual values

# DeepSeek Model Configuration (via SiliconFlow)
DEEPSEEK_MODEL_ID=deepseek-ai/DeepSeek-V3.1-Terminus
DEEPSEEK_API_KEY=your_api_key_here
DEEPSEEK_BASE_URL=https://api.siliconflow.cn/v1

# Optional: Google Search API (for external knowledge retrieval in CRAG)
# GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here

# Optional: T5 Evaluator Configuration
# T5_EVALUATOR_PATH=finetuned_t5_evaluator
# T5_BATCH_SIZE=4

# CRAG Retrieval Strategy Configuration
# USE_COMPLETE_CRAG: Whether to use complete CRAG with T5 semantic evaluator (true/false, default: true)
USE_COMPLETE_CRAG=true

# CRAG_DECOMPOSE_MODE: Document decomposition mode
# Options: 'fixed_num', 'excerption', 'selection' (default: 'excerption')
# - 'fixed_num': Split into fixed number of strips
# - 'excerption': Extract key excerpts (recommended)
# - 'selection': Select top-k strips (faster, less accurate)
CRAG_DECOMPOSE_MODE=excerption

# CRAG_TOP_K: Number of top passages to return (default: 5)
CRAG_TOP_K=5

# CRAG_SIMILARITY_THRESHOLD: Minimum similarity score for retrieval (default: 0.15)
CRAG_SIMILARITY_THRESHOLD=0.15

# CRAG_UPPER_THRESHOLD: Threshold for 'correct' action (default: 0.6)
# Passages with scores above this are considered 'correct'
CRAG_UPPER_THRESHOLD=0.6

# CRAG_LOWER_THRESHOLD: Threshold for 'ambiguous' action (default: 0.2)
# Passages with scores below this are considered 'incorrect'
CRAG_LOWER_THRESHOLD=0.2
